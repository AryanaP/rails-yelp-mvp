<h1><%= @restaurant.name %> </h1>
<ul>
  <li><%= @restaurant.address %> </li>
  <li><%= @restaurant.phone_number %> </li>
  <li><%= @restaurant.category %> </li>
</ul>


<h3>Reviews</h3>

  <% if @restaurant.reviews == [] %>
      <%= "No reviews yet !" %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <p>  <%= review.rating %> stars -  <%= review.content %></p>
    <% end %>
  <% end %>

<p><%= link_to "Add Review", new_restaurant_review_path(@restaurant) %></p>

<%= link_to "Edit", edit_restaurant_path %>
<%= link_to "Delete", restaurant_path, method: :delete %>
<%= link_to "All Restaurants", restaurants_path %>
